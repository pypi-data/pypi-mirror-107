{
  "version": "1.0",
  "rules": {
    "allow_byoc": {
      "desc": "allow BYOC in MMAR",
      "type": "bool",
      "default": false
    },
    "allow_custom_datalist": {
      "desc": "allow custom datalist",
      "default": true
    }
  },
  "rights": {
    "upload_mmar": {
      "desc": "upload mmar",
      "default": true
    },
    "deploy_self": {
      "desc": "deploy mmar to own site",
      "default": false,
      "precond": "selfOrg"
    },
    "deploy_all": {
      "desc": "deploy mmar to all sites",
      "default": false
    },
    "train_self": {
      "desc": "do training operations on own site",
      "default": false,
      "precond": "selfOrg"
    },
    "train_all": {
      "desc": "do training ops on all sites",
      "default": false
    },
    "view_self": {
      "desc": "view log files of own org",
      "default": true,
      "precond": "selfOrg"
    },
    "view_all": {
      "desc": "view log files of all sites",
      "default": false
    },
    "operate_all": {
      "desc": "start/stop all sites",
      "default": false
    },
    "operate_self": {
      "desc": "start/stop own site",
      "default": false,
      "precond": "selfOrg"
    }
  }
}
